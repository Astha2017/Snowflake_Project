---- VALIDATION_MODE ----
// Prepare database & table
CREATE DATABASE COPY_DB;
DROP DATABASE COPY_DB;
ALTER DATABASE COPY_DB RENAME TO COPY_DB_VALIDATION;

// CREATING TABLE
CREATE TABLE COPY_DB_VALIDATION.PUBLIC.ORDERS (
ORDER_ID VARCHAR (30),
AMOUNT VARCHAR (30),
PROFIT INT,
QUANTITY INT,
CATEGORY VARCHAR (30),
SUBCATEGORY VARCHAR (30)
);

// Preparing stage object
create stage COPY_DB_VALIDATION.PUBLIC.aws_stage_copy
url = 's3://snowflakebucket-copyoption/size/';

LIST @COPY_DB_VALIDATION.PUBLIC.aws_stage_copy;

 //Load data using copy command
COPY INTO COPY_DB_VALIDATION.PUBLIC.ORDERS
    FROM @aws_stage_copy
    file_format= (type = csv field_delimiter=',' skip_header=1)
    pattern='.*Order.*'
    VALIDATION_MODE = RETURN_ERRORS

SELECT * FROM ORDERS;

COPY INTO COPY_DB_VALIDATION.PUBLIC.ORDERS
    FROM @aws_stage_copy
    file_format= (type = csv field_delimiter=',' skip_header=1)
    pattern='.*Order.*'
   VALIDATION_MODE = RETURN_5_ROWS 

---- Use files with errors ----
CREATE OR REPLACE STAGE COPY_DB_VALIDATION.PUBLIC.aws_stage_copy
    url='s3://snowflakebucket-copyoption/returnfailed/';

LIST @COPY_DB_VALIDATION.PUBLIC.aws_stage_copy;    



COPY INTO COPY_DB_VALIDATION.PUBLIC.ORDERS
    FROM @aws_stage_copy
    file_format= (type = csv field_delimiter=',' skip_header=1)
    pattern='.*Order.*'
    VALIDATION_MODE = RETURN_ERRORS



COPY INTO COPY_DB_VALIDATION.PUBLIC.ORDERS
    FROM @aws_stage_copy
    file_format= (type = csv field_delimiter=',' skip_header=1)
    pattern='.*order.*'
    VALIDATION_MODE = RETURN_5_rows;

    SELECT * FROM ORDERS;

   
